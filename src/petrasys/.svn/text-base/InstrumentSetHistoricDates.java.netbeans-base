  private void setupMinMaxDates() {
    ResultSet res = null;
    try {
      PreparedStatement minMaxDates = DBops.minMaxDateBySymbolAndExpiry(instrument.getUl(), instrument.getExpiry());
      res = minMaxDates.executeQuery();
      if (res.next()) {
        Date bd = (Date)res.getTimestamp(1);
        Date ed = (Date)res.getTimestamp(2);
        String gg = ed.toString();
        String tt = DateOps.nowFileNameString();
        String beginD = DateOps.dbFormatString(bd);
        String endD = DateOps.dbFormatString(ed);
        beginDateLabel.setText(beginD);
        endDateLabel.setText(endD);
        beginDateSpinner.setModel(new javax.swing.SpinnerDateModel(bd, null, null, java.util.Calendar.MINUTE));
        endDateSpinner.setModel(new javax.swing.SpinnerDateModel(ed, null, null, java.util.Calendar.MINUTE));
      } else {
        JOptionPane.showMessageDialog(null, "No Result!", "In setupMinMaxDates()", JOptionPane.ERROR_MESSAGE);
      }
    } catch (SQLException ex) {
      JOptionPane.showMessageDialog(null, ex.getMessage(), "SQLException", JOptionPane.ERROR_MESSAGE);
    }
  }

